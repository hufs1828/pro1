<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MissionActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0E4F5"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="205dp"
        android:text="HINT!"
        android:textColor="#FF0000"
        android:textSize="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.477" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="66dp"
        android:layout_height="69dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/imageView2"
        app:srcCompat="@drawable/running"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="54dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="71dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="98dp"
        app:srcCompat="@drawable/next_arrow"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="123dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="71dp"
        android:layout_height="64dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView4"
        app:srcCompat="@drawable/next_arrow"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="127dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="71dp"
        android:layout_height="64dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        app:srcCompat="@drawable/current_arrow"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="127dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="71dp"
        android:layout_height="64dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView3"
        app:srcCompat="@drawable/next_arrow"
        tools:layout_editor_absoluteX="250dp"
        tools:layout_editor_absoluteY="127dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="58dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView2"
        app:srcCompat="@drawable/qm"
        tools:layout_editor_absoluteX="323dp"
        tools:layout_editor_absoluteY="129dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="79dp"
        android:layout_height="64dp"
        android:layout_alignTop="@+id/imageView8"
        android:layout_toStartOf="@+id/imageView6"
        app:srcCompat="@drawable/circle"
        tools:layout_editor_absoluteX="323dp"
        tools:layout_editor_absoluteY="129dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="79dp"
        android:layout_height="64dp"
        android:layout_alignTop="@+id/imageView9"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/circle"
        tools:layout_editor_absoluteX="323dp"
        tools:layout_editor_absoluteY="129dp" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="79dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="67dp"
        android:layout_marginStart="58dp"
        app:srcCompat="@drawable/circle"
        tools:layout_editor_absoluteX="323dp"
        tools:layout_editor_absoluteY="129dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="209dp"
        android:layout_height="83dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="145dp"
        android:background="@drawable/shape"
        android:text="주변에 한옥이 가득한 곳으로 가세요"
        android:textAlignment="center"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="301dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:onClick="testButtonClicked"
        android:text="tmp_complete"
        android:layout_marginRight="0dp"
        android:layout_alignParentRight="true" />

</RelativeLayout>